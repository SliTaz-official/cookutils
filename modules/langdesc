langdesc() {
	local i
	case $1 in
		af) i='Afrikaans';;
		am) i='Amharic';;
		ar) i='Arabic';;
		ast) i='Asturian';;
		az) i='Azerbaijani';;
		be) i='Belarusian';;
		be@latin) i='Belarusian (Latin script)';;
		bg) i='Bulgarian';;
		bn) i='Bengali';;
		bn_IN) i='Bengali (India)';;
		br) i='Breton';;
		bs) i='Bosnian';;
